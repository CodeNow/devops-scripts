apiVersion: v1
kind: ConfigMap
metadata:
  name: navi-proxy-base-conf
data:
  nginx.conf: |
    user www-data;
    worker_processes 4;
    pid /run/nginx.pid;

    events {
      worker_connections 5000;
    }

    http {
      ##
      # Basic Settings
      ##
      tcp_nodelay on;
      keepalive_timeout 65;
      server_tokens off;

      ##
      # Logging Settings
      ##

      access_log /var/log/nginx/access.log;
      error_log /var/log/nginx/error.log;

      ##
      # Virtual Host Configs
      ##

      include /etc/nginx/sites-enabled/*;
    }
