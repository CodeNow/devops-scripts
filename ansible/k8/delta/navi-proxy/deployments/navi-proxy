apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: navi-proxy
spec:
  replicas:  1 
  template:
    metadata:
      labels:
        app: navi-proxy
    spec:
      imagePullSecrets:
        - name: runnable-kubernetes-pull-secret
      containers:
        - image: nginx:1.10
          imagePullPolicy: Always
          name: navi-proxy
          resources:
            requests:
              cpu: "250m"
              memory: "500M"
            limits:
              cpu: "1550m"
              memory: 1500M
          ports:
            - containerPort: 80
            - containerPort: 443
          volumeMounts:
            - name: navi-proxy-runnableapp-com-certs
              mountPath: /etc/ssl/certs/runnableapp.com
            - name: navi-proxy-base-conf
              mountPath: /etc/nginx/
            - name: navi-proxy-navi-conf
              mountPath: /etc/nginx/sites-enabled
      volumes:
        - name: navi-proxy-runnableapp-com-certs
          configMap:
            name: navi-proxy-runnableapp-com-certs
        - name: navi-proxy-base-conf
          configMap:
            name: navi-proxy-base-conf
        - name: navi-proxy-navi-conf
          configMap:
            name: navi-proxy-navi-conf
