apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: mongo
spec:
  replicas:  1 
  template:
    metadata:
      labels:
        app: mongo
    spec:
      imagePullSecrets:
        - name: runnable-kubernetes-pull-secret
      containers:
        - image: mongo:3.2.6
          imagePullPolicy: Always
          name: mongo
          resources:
            requests:
              cpu: "250m"
              memory: "500M"
            limits:
              cpu: "1550m"
              memory: 1500M
          ports:
            - containerPort: 27017
          volumeMounts:
            - name: mongo-db-claim
              mountPath: /data/db
      volumes:
        - name: mongo-db-claim
          persistentVolumeClaim:
            claimName: mongo-db-claim
