apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: mongo
spec:
  replicas: 1
  template:
    metadata:
      labels:
        app: mongo
    spec:
      containers:
        - image: mongo:3.2.6
          imagePullPolicy: Always
          name: mongo
          ports:
            - containerPort: 27017
          volumeMounts:
            - name: mongo-db-claim
              mountPath: /data/db
      volumes:
        - name: mongo-db-claim
          persistentVolumeClaim:
            claimName: mongo-db-claim
