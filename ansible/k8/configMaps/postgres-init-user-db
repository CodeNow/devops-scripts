apiVersion: v1
kind: ConfigMap
metadata:
  name: postgres-init-user-db
data:
  init-user-db.sh: |
    #!/bin/bash
    set -e

    psql -v ON_ERROR_STOP=1 --username "$POSTGRES_USER" <<-EOSQL
        CREATE DATABASE egret;
        GRANT ALL PRIVILEGES ON DATABASE egret TO egret;
        CREATE DATABASE arithmancy;
        GRANT ALL PRIVILEGES ON DATABASE arithmancy TO arithmancy;
        CREATE DATABASE big_poppa;
        GRANT ALL PRIVILEGES ON DATABASE big_poppa TO big_poppa;
    EOSQL
