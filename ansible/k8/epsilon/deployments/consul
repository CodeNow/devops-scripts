apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: consul
spec:
  replicas: 1
  template:
    metadata:
      labels:
        app: consul
    spec:
      containers:
        - image: consul:v0.6.4
          name: consul
          args:
            - consul
            - agent
            - -server
            - -client=0.0.0.0
            - -bootstrap-expect=1
            - -data-dir=/tmp/db
            - -ui
          ports:
            - containerPort: 8500
