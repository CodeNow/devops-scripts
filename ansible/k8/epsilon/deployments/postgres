apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: postgres
spec:
  replicas: 1
  template:
    metadata:
      labels:
        app: postgres
    spec:
      containers:
        - image: postgres:9.5.2
          imagePullPolicy: Always
          name: postgres
          env:
            - name: POSTGRES_PASSWORD
              value: "JFmZDuVYPt9vUxk4DBjj"
            - name: POSTGRES_USER
              value: "epsilon"
          ports:
            - containerPort: 5432
          volumeMounts:
            - name: postgres-db-claim
              mountPath: /data/db
            - name: postgres-init-user-db
              mountPath: /docker-entrypoint-initdb.d/
      volumes:
        - name: postgres-db-claim
          persistentVolumeClaim:
            claimName: postgres-db-claim
        - name: postgres-init-user-db
          configMap:
            name: postgres-init-user-db
