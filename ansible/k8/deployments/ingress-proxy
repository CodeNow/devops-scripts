apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: ingress-proxy
spec:
  replicas: 1
  template:
    metadata:
      labels:
        app: ingress-proxy
    spec:
      containers:
        - image: nginx:1.10
          name: ingress-proxy
          ports:
            - containerPort: 80
            - containerPort: 443
          volumeMounts:
            - name: ingress-proxy-runnable-gamma-com-certs
              mountPath: /etc/ssl/certs/runnable-gamma.com
            - name: ingress-proxy-base-conf
              mountPath: /etc/nginx/
            - name: ingress-proxy-mixpanel-config
              mountPath: /etc/nginx/other-sites-enabled
            - name: ingress-proxy-sites-enabled-config
              mountPath: /etc/nginx/sites-enabled
      volumes:
        - name: ingress-proxy-runnable-gamma-com-certs
          configMap:
            name: ingress-proxy-runnable-gamma-com-certs
        - name: ingress-proxy-base-conf
          configMap:
            name: ingress-proxy-base-conf
        - name: ingress-proxy-mixpanel-config
          configMap:
            name: ingress-proxy-mixpanel-config
        - name: ingress-proxy-sites-enabled-config
          configMap:
            name: ingress-proxy-sites-enabled-config
