apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: rabbitmq
spec:
  replicas: 1
  template:
    metadata:
      labels:
        app: rabbitmq
    spec:
      containers:
        - image: rabbitmq:3.5.3-management
          name: rabbitmq
          ports:
            - containerPort: 5672
            - containerPort: 15672
          volumeMounts:
            - name: rabbitmq-db-claim
              mountPath: /var/lib/rabbitmq
            - name: rabbitmq-conf
              mountPath: /etc/rabbitmq/
      volumes:
        - name: rabbitmq-db-claim
          persistentVolumeClaim:
            claimName: rabbitmq-db-claim
        - name: rabbitmq-conf
          configMap:
            name: rabbitmq-conf
