apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: navi-proxy
spec:
  replicas: 1
  template:
    metadata:
      labels:
        app: navi-proxy
    spec:
      containers:
        - image: nginx:1.10
          name: navi-proxy
          args:
            - npm
            - start
          ports:
            - containerPort: 80
            - containerPort: 443
          volumeMounts:
            - name: navi-proxy-runnable.ninja-certs
              mountPath: /etc/ssl/certs/runnable.ninja
            - name: navi-proxy-base-conf
              mountPath: /etc/nginx/
            - name: navi-proxy-navi-config
              mountPath: /etc/nginx/sites-enabled
      volumes:
        - name: navi-proxy-runnable.ninja-certs
          configMap:
            name: navi-proxy-runnable.ninja-certs
        - name: navi-proxy-base-conf
          configMap:
            name: navi-proxy-base-conf
        - name: navi-proxy-navi-config
          configMap:
            name: navi-proxy-navi-config
