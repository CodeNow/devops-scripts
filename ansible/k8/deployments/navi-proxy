apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: navi-proxy
spec:
  replicas: 1
  template:
    metadata:
      labels:
        app: navi-proxy
    spec:
      containers:
        - image: nginx:1.10
          imagePullPolicy: Always
          name: navi-proxy
          ports:
            - containerPort: 80
            - containerPort: 443
          volumeMounts:
            - name: navi-proxy-runnablecloud-com-certs
              mountPath: /etc/ssl/certs/runnablecloud.com
            - name: navi-proxy-base-conf
              mountPath: /etc/nginx/
            - name: navi-proxy-navi-conf
              mountPath: /etc/nginx/sites-enabled
      volumes:
        - name: navi-proxy-runnablecloud-com-certs
          configMap:
            name: navi-proxy-runnablecloud-com-certs
        - name: navi-proxy-base-conf
          configMap:
            name: navi-proxy-base-conf
        - name: navi-proxy-navi-conf
          configMap:
            name: navi-proxy-navi-conf
