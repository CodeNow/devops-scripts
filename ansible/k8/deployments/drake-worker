metadata:
  name: drake-worker
spec:
  replicas: 1
  template:
    metadata:
      labels:
        app: drake-worker
    spec:
      containers:
        - image: 127.0.0.1:5000/runnable/drake-worker:v2.5.0
          name: drake-worker
          args:
            - npm
            - run
            - start-worker
          env:
            - name: ROLLBAR_KEY
              value: "14152b8572034943b714da27ca607698"
