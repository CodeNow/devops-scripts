apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: mongo-navi
spec:
  replicas: 1
  template:
    metadata:
      labels:
        app: mongo-navi
    spec:
      containers:
        - image: mongo:3.2.6
          name: mongo-navi
          ports:
            - containerPort: 27017
          volumeMounts:
            - name: mongo-navi-db-claim
              mountPath: /data/db
      volumes:
        - name: mongo-navi-db-claim
          persistentVolumeClaim:
            claimName: mongo-navi-db-claim
