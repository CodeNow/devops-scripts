apiVersion: batch/v2alpha1
kind: CronJob
metadata:
  name: swarm-cloudwatch-reporter
spec:
  schedule: "*/5 * * * *"
  jobTemplate:
    spec:
      template:
        spec:
          containers:
          - name: swarm-cloudwatch-reporter
            image: 127.0.0.1:5000/runnable/swarm-cloudwatch-reporter:v2.0.0
            args: npm start
          restartPolicy: OnFailure
