apiVersion: batch/v2alpha1
kind: CronJob
metadata:
  name: swarm-cloudwatch-reporter
spec:
  schedule: "*/5 * * * *"
  jobTemplate:
    spec:
      template:
        spec:
          containers:
          - name: swarm-cloudwatch-reporter
            image: registry.runnable.com/runnable/swarm-cloudwatch-reporter:v1.12.0
            args: npm start
          restartPolicy: OnFailure
