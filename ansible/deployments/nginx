apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: nginx
spec:
  replicas: 1
  template:
    metadata:
      labels:
        app: nginx
    spec:
      containers:
        - image: nginx:1.10
          name: nginx
          args: 
          ports:
            - containerPort: 80
            - containerPort: 443
          volumeMounts:
            - name: nginx-runnable-gamma.com-certs
              mountPath: /etc/ssl/certs/runnable-gamma.com
            - name: nginx-base-conf
              mountPath: /etc/nginx/
            - name: nginx-mixpanel-config
              mountPath: /etc/nginx/other-sites-enabled
            - name: nginx-api-config
              mountPath: /etc/nginx/sites-enabled
      volumes:
        - name: nginx-runnable-gamma.com-certs
          configMap:
            name: nginx-runnable-gamma.com-certs
        - name: nginx-base-conf
          configMap:
            name: nginx-base-conf
        - name: nginx-mixpanel-config
          configMap:
            name: nginx-mixpanel-config
        - name: nginx-api-config
          configMap:
            name: nginx-api-config
