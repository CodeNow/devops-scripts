              value: 88ddc423c2312d02a8bbcaad76dd4c374a30e4af
            - name: NODE_ENV
              value: production-gamma
            - name: PORT
              value: '9123'
            - name: HOME
              value: /
            - name: PATH
              value: >-
                ./node_modules/.bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin
            - name: LC_ALL
              value: en_US.UTF-8
          ports:
            - containerPort: 9123
