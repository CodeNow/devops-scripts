apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: rabbitmq-3-5-3-management
spec:
  replicas: 1
  template:
    metadata:
      labels:
        app: rabbitmq-3-5-3-management
    spec:
      containers:
        - image: 'rabbitmq:3.5.3-management'
          name: rabbitmq-3-5-3-management
          args:
            - rabbitmq-server
          env:
            - name: PATH
              value: >-
                /usr/lib/rabbitmq/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin
            - name: RABBITMQ_LOGS
              value: '-'
            - name: RABBITMQ_SASL_LOGS
              value: '-'
            - name: RABBITMQ_VERSION
              value: 3.5.3-1
          volumeMounts:
            - name: rabbitmq-3-5-3-management-etc-rabbitmq-rabbitmq-config
              mountPath: /etc/rabbitmq
          command:
            - /docker-entrypoint.sh
          ports:
            - containerPort: 15672
            - containerPort: 5672
      volumes:
        - name: rabbitmq-3-5-3-management-etc-rabbitmq-rabbitmq-config
          configMap:
            name: rabbitmq-3-5-3-management-etc-rabbitmq-rabbitmq-config
