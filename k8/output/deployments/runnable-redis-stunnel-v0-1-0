apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: runnable-redis-stunnel-v0-1-0
spec:
  replicas: 1
  template:
    metadata:
      labels:
        app: runnable-redis-stunnel-v0-1-0
    spec:
      containers:
        - image: 'runnable/redis-stunnel:v0.1.0'
          name: runnable-redis-stunnel-v0-1-0
          args:
            - /start.sh
          env:
            - name: PATH
              value: '/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin'
          volumeMounts:
            - name: runnable-redis-stunnel-v0-1-0-stunnel-private-pem
              mountPath: /stunnel
          ports:
            - containerPort: 6380
      volumes:
        - name: runnable-redis-stunnel-v0-1-0-stunnel-private-pem
          configMap:
            name: runnable-redis-stunnel-v0-1-0-stunnel-private-pem
