apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: metabase-metabase
spec:
  replicas: 1
  template:
    metadata:
      labels:
        app: metabase-metabase
    spec:
      containers:
        - image: metabase/metabase
          name: metabase-metabase
          args: null
          env:
            - name: PATH
              value: >-
                /usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:/usr/lib/jvm/java-1.8-openjdk/jre/bin
            - name: LANG
              value: C.UTF-8
            - name: JAVA_HOME
              value: /usr/lib/jvm/java-1.8-openjdk/jre
            - name: JAVA_VERSION
              value: 8u92
            - name: JAVA_ALPINE_VERSION
              value: 8.92.14-r1
            - name: FC_LANG
              value: en-US
            - name: LC_CTYPE
              value: en_US.UTF-8
          command:
            - /app/run_metabase.sh
          ports:
            - containerPort: 3000
