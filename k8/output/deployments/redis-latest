apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: redis-latest
spec:
  replicas: 1
  template:
    metadata:
      labels:
        app: redis-latest
    spec:
      containers:
        - image: 'redis:latest'
          name: redis-latest
          args:
            - redis-server
          env:
            - name: PATH
              value: '/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin'
            - name: REDIS_VERSION
              value: 3.0.5
            - name: REDIS_DOWNLOAD_URL
              value: 'http://download.redis.io/releases/redis-3.0.5.tar.gz'
            - name: REDIS_DOWNLOAD_SHA1
              value: ad3ee178c42bfcfd310c72bbddffbbe35db9b4a6
          command:
            - /entrypoint.sh
          ports:
            - containerPort: 6379
